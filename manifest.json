{
  "manifest_version": 3,
  "name": "LeetMentor",
  "description": "Guides thinking from brute force to optimized patterns using hints, without revealing solutions.",
  "version": "0.1.0",

  "permissions": [
    "activeTab",
    "scripting"
  ],

  "host_permissions": [
    "https://leetcode.com/problems/*"
  ],

  "action": {
    "default_popup": "popup/popup.html"
  },

  "background": {
    "service_worker": "background.js"
  },

"content_scripts": [
  {
    "matches": ["https://leetcode.com/problems/*"],
    "js": ["content.js"],
    "run_at": "document_idle"
  }
]


}
